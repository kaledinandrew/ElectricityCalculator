<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="InputTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TotalTextStyle">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_main_state_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/button_main_text_color_selector</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DeleteButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_delete_state_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/button_delete_text_color_selector</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
