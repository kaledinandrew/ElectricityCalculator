<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.andrey.electricitycalculator.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10sp"
            android:paddingEnd="10sp">

            <AutoCompleteTextView
                style="@style/MainTextStyle"
                android:id="@+id/inputLocationThreeRates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/inputLocation"
                android:textAlignment="center"
                android:inputType="textCapWords|text"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:maxLength="12"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    style="@style/MainTextStyle"
                    android:text="@string/rate1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    style="@style/MainTextStyle"
                    android:text="@string/rate2"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    style="@style/MainTextStyle"
                    android:text="@string/rate3"/>

            </LinearLayout>

            <View
                android:id="@+id/viewThreeRates"
                android:layout_width="match_parent"
                android:layout_height="7dp">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/MainTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate"/>

                <EditText
                    android:id="@+id/rate1"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:inputType="numberDecimal"
                    android:text="@string/space"
                    android:maxLength="6"
                    tools:ignore="LabelFor" />

                <EditText
                    android:id="@+id/rate2"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:inputType="numberDecimal"
                    android:text="@string/space"
                    android:maxLength="6"
                    tools:ignore="LabelFor" />

                <EditText
                    android:id="@+id/rate3"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:inputType="numberDecimal"
                    android:text="@string/space"
                    android:maxLength="6"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/saveThreeRates"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:background="@drawable/main_button"
                    android:text="@string/rewriteRates"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/MainTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="@string/previous" />

                <EditText
                    android:id="@+id/inputFirstPrevious"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:hint="@string/input"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:maxLength="7"/>

                <EditText
                    android:id="@+id/inputSecondPrevious"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:hint="@string/input"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:maxLength="7"/>

                <EditText
                    android:id="@+id/inputThirdPrevious"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:hint="@string/input"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:maxLength="7"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/MainTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="@string/current" />

                <EditText
                    android:id="@+id/inputFirstCurrent"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:hint="@string/input"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:maxLength="7"/>

                <EditText
                    android:id="@+id/inputSecondCurrent"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:hint="@string/input"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:maxLength="7"/>

                <EditText
                    android:id="@+id/inputThirdCurrent"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:hint="@string/input"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:maxLength="7"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonCalculateThreeRates"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:background="@drawable/main_button"
                    android:text="@string/calculate"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/MainTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/delta"/>

                <TextView
                    android:id="@+id/deltaFirst"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/nullNumber"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/deltaSecond"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/nullNumber"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/deltaThird"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/nullNumber"
                    android:textAlignment="center"
                    android:textSize="24sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/MainTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/sum"/>

                <TextView
                    android:id="@+id/sumFirst"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/nullMoney"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/sumSecond"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/nullMoney"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/sumThird"
                    style="@style/MainTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/nullMoney"
                    android:textAlignment="center"
                    android:textSize="24sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:text="@string/total"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/totalThreeRates"
                    style="@style/TitleTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/nullMoney"
                    android:textAlignment="center"
                    android:textSize="32sp" />

            </LinearLayout>

            <Button
                android:id="@+id/saveThreeRatesRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_button"
                android:text="@string/saveRecord"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
